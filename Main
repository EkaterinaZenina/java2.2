public class Main {
    public static void main(String[] args) {
        int account = 100;
        boolean replenisment = true;
        int replenishment = 700;
        int bonus = 0;
        if (replenishment >= 1000) {
            bonus = 0;
            bonus = replenishment / 100;
        }
        System.out.println( replenishment + bonus + account);
    }
}
